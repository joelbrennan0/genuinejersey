<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<div id="header"><h1>Listing users</h1></div>

<table>
  <thead>
    <tr>

      <th class="table-header">Latitude</th>
      <th class="table-header">Longitude</th>
      <th class="table-header">Title</th>
      <th class="table-header">Address</th>
      <th class="table-header">Parish</th>
      <th class="table-header">Postcode</th>
      <th class="table-header">Description</th>
      <th class="table-header">Category</th>
      <th class="table-header">Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class="table-entry"><%= user.latitude %></td>
        <td class="table-entry"><%= user.longitude %></td>
        <td class="table-entry"><%= user.title %></td>
        <td class="table-entry"><%= user.address %></td>
        <td class="table-entry"><%= user.parish %></td>
        <td class="table-entry"><%= user.postcode %></td>
        <td class="table-entry"><%= user.description %></td>
        <td class="table-entry"><%= user.picture %></td>
        <td class="table-btn"><%= link_to 'Show', user %></td>
        <td class="table-btn-alt"><%= link_to 'Edit', edit_user_path(user) %></td>
        <td class="table-btn"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: "btn" %>

<div>
  <div id="map" style='width: 100%; height: 400px;'></div>
</div>

<script type="text/javascript">
  
  handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
  
</script>
